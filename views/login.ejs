<% include partials/header %>

<div class="row">
    <h1 style="text-align: center;">Login</h1>
    <div style="width: 30%; margin: 30px auto; ">
        <form method="post" action="/login">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Username" name="username"></input>
            </div>
            <div class="form-group">
                <input class="form-control" type="password" placeholder="Password" name="password"></input>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-default btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/login/facebook" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Login using Facebook</a>    
        <fb:login-button 
          scope="public_profile,email"
          onlogin="checkLoginState();">
        </fb:login-button>
        <% if(msg != ""){ %>
            <div class="alert alert-danger alert-dismissable"><%= msg %></div>
        <% } %>
    </div>
</div>
<% include partials/footer %>   